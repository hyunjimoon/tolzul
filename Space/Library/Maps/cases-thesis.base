    recursive: true
properties:
  file.name:
    displayName: Case
  thesisCase:
    displayName: Paper
  caseType:
    displayName: Type
  vagueness:
    displayName: V
  outcome:
    displayName: Outcome
  investment:
    displayName: Investment
views:
  - type: table
    name: All Thesis Cases
    filters:
      and:
        - file.inFolder("Space/Library/1ë…¼ë¬¸ìš©/business_cases")
    order:
      - thesisCase
      - caseType
      - file.name
      - vagueness
      - outcome
      - investment
    sort:
      - property: thesisCase
        direction: ASC
      - property: caseType
        direction: ASC
    limit: 100
    filter:
      - property: thesisCase
        operator: is not empty
      - property: file.name
        operator: does not contain
        value: README
      - property: file.folder
        operator: contains
        value: business_cases
    columnSize:
      note.thesisCase: 50
      note.caseType: 100
      note.vagueness: 50
      note.outcome: 100
